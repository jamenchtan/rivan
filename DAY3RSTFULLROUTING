!first prep. Setup DHCP for D1 and D2 

@d1
conf t
ip dhcp excluded-add 10.2.1.1 10.2.1.99
ip dhcp excluded-add 10.2.1.200 10.2.1.254
ip dhcp pool vlan10
 network 10.2.1.0 255.255.255.0
 default-router 10.2.1.254
end

@d2
conf t
ip dhcp excluded-add 10.2.2.1 10.2.2.99
ip dhcp excluded-add 10.2.2.200 10.2.1.254
ip dhcp pool vlan10
 network 10.2.2.0 255.255.255.0
 default-router 10.2.2.254
end

@A1
conf t 
int e0/0
switchport mode access
switchport access vlan 10
end

@A2
conf t 
int e1/0
switchport mode access
switchport access vlan 20
end

@P1
conf t
int e0/0
ip add dhcp
no shut
end

@P2
conf t
int e1/0
ip add dhcp
no shut
end

!!CISCO Routing Protocols
=========================================
!! r4 -> r2
@r4
conf t 
ip route 10.1.1.4 255.255.255.252 10.1.1.9

@r2
conf t
ip route 10.1.1.8 255.255.255.252 10.1.1.6


========================================

!! r3 -> r1
@r3
conf t
ip route 10.1.1.0 255.255.255.252 10.1.1.5
do ping 10.1.1.1

@r1
conf t
ip route 10.1.1.4 255.255.255.252 10.1.1.2
do ping 10.1.1.6
=========================================

!!r4 -> r1
@r4
conf t
ip route 10.1.1.0 255.255.255.252 10.1.1.9
do ping 10.1.1.1

@r1
conf t
ip route 10.1.1.8 255.255.255.252 10.1.1.2
do ping 10.1.1.10


!! DYNAMIC ROUTING (EIGRP - OSPB - BGP)

!Clear Static Routes for OPSF use later
conf t
no ip routing
ip routing
end

!configure EIGRP
!- the best dynamic routing protocol
!- Administrative distance of 90
!- Cisco proprietary (for CISCO Use only)

@D1
!!kunin lahat ng Calye sa network
conf t
router eigrp 100
       no auto-summary
       network 10.1.4.4
       network 10.2.1.0
       network 10.2.2.0
       network 192.168.1.128
end


@D2
!!kunin lahat ng Calye sa network
conf t
router eigrp 100
       no auto-summary
       network 10.1.4.8
       network 10.2.1.0
       network 10.2.2.0
       network 192.168.1.128
end

@R4
conf t
router eigrp 100
       no auto-summary
       network 10.1.4.4
       network 10.1.4.8
end

========================================

 



